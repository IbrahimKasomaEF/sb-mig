{
  "name": "root",
  "workspaces": [
    "@sb-mig/*"
  ],
  "author": "Marcin Krawczyk <marckraw@icloud.com>",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "lerna exec --parallel yarn start:dev ",
    "build:core": "cd @sb-mig/sb-mig && yarn build",
    "build:add-components": "cd @sb-mig/plugin-add-components && yarn build",
    "build:generate-project": "cd @sb-mig/plugin-generate-project && yarn build",
    "build:create-component": "cd @sb-mig/plugin-create-component && yarn build",
    "start": "yarn build:core && yarn build:add-components && yarn build:generate-project && yarn build:create-component && lerna link",
    "postinstall": "node ./node_modules/husky/lib/installer/bin install"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@types/chai": "^4.2.21",
    "@types/figlet": "^1.5.4",
    "@types/mocha": "^5",
    "@types/ncp": "^2.0.5",
    "@types/node": "^10",
    "@types/rimraf": "^3.0.2",
    "chai": "^4.3.4",
    "commitizen": "^4.0.4",
    "eslint": "^5.13",
    "eslint-config-oclif-typescript": "^0.1",
    "globby": "^10",
    "husky": "^4.2.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.1.2",
    "mocha": "^5",
    "nyc": "^14",
    "prettier": "^2.4.0",
    "ts-node": "^8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@oclif/plugin-help": "^2",
    "axios": "^0.21.4",
    "chalk": "^4.1.2",
    "execa": "^4.0.0",
    "figlet": "^1.5.2",
    "ora": "^4.0.4",
    "os": "^0.1.2",
    "tslib": "^1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "@sb-mig/**/!(*dist)/*.{js,jsx}": [
      "npx prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
