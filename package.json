{
  "name": "root",
  "workspaces": [
    "@sb-mig/*"
  ],
  "author": "Marcin Krawczyk <marckraw@icloud.com>",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "lerna exec --parallel yarn start:dev ",
    "build:plugins": "lerna exec --parallel yarn build",
    "start": "cd @sb-mig/sb-mig && yarn build && cd ../ && yarn build:plugins",
    "postinstall": "node ./node_modules/husky/lib/installer/bin install"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.4",
    "husky": "^4.2.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "@sb-mig/**/!(*dist)/*.{js,jsx}": [
      "npx prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
